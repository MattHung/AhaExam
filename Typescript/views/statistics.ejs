<div class="container h-100" style="padding-top: 20vh;">
  <div class="col-lg-12 col-xl-11">
    <div class="card text-black" style="border-radius: 25px;">
      <div class="card-body p-md-5">
        <div class="row justify-content-center">
          <div class="container">
            <table id="statistic_user_statistic" data-toggle="table"
                data-url="./dashboard/user_statistics">
              <thead>
                <tr>
                  <th data-field="totalSignup">
                    <span class="text-primary">
                      Total Signup
                    </span>
                  </th>
                  <th data-field="totalTodayActive">
                    <span class="text-primary">
                      Total Active Today
                    </span>
                  </th>
                  <th data-field="averageActiveIn7Days">
                    <span class="text-primary">
                      Total Active in 7 Todays
                    </span>
                  </th>
                </tr>
              </thead>
            </table>

            </br></br>

            <table id="statistic_user_summary" data-toggle="table" 
                data-url="./dashboard/user_summary" 
                data-page-size="5" 
                data-side-pagination="server" 
                data-pagination="true">

              <thead>
                <tr>
                  <th data-field="user_name">
                    <span class="text-primary">
                      User Name
                    </span>
                  </th>
                  <th data-field="registration_type">
                    <span class="text-primary">
                      Registration Type
                    </span>
                  </th>
                  <th data-field="count_loggedin">
                    <span class="text-primary">
                      Loggedin count
                    </span>
                  </th>
                  <th data-field="timestamp_signedup">
                    <span class="text-primary">
                      TimeStamp SignedUp
                    </span>
                  </th>
                  <th data-field="timestamp_last_session">
                    <span class="text-primary">
                      TimeStamp Last Loggedin
                    </span>
                  </th>
                </tr>
              </thead>
            </table>
